local function neonPulse()
    local pulse = Instance.new("Part")
    pulse.Anchored = true
    pulse.CanCollide = false
    pulse.Size = Vector3.new(50, 50, 0)
    pulse.Transparency = 1
    pulse.CFrame = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, -3, 0)
    
    local mesh = Instance.new("SpecialMesh", pulse)
    mesh.MeshType = Enum.MeshType.Sphere
    
    local light = Instance.new("PointLight", pulse)
    light.Color = Color3.fromRGB(0, 255, 255)
    light.Range = 30
    light.Brightness = 5
    
    game.Debris:AddItem(pulse, 1)
    
    for i = 1, 0, -0.05 do
        pulse.Transparency = i
        mesh.Scale = mesh.Scale + Vector3.new(0.5, 0.5, 0)
        light.Brightness = light.Brightness - 0.25
        task.wait(0.02)
    end
end

-- ███████╗ █████╗ ███████╗███████╗███████╗██╗   ██╗
