local function showNotifications()
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "⚡ 量子核心启动",
        Text = "正在初始化系统...",
        Duration = 3,
        Icon = "rbxassetid://7733715405"
    })
    
    task.wait(1.5)
    
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "⟳ 系统状态",
        Text = "反挂机协议已激活 · 量子通道稳定",
        Duration = 4,
        Icon = "rbxassetid://7733715405"
    })
    
    task.wait(1)
    
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "✓ 初始化完成",
        Text = "全息界面加载完毕",
        Duration = 3,
        Icon = "rbxassetid://7733715405"
    })
end

