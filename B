-- ████╗ ████║██╔══██╗██║████╗  ██║
-- ██╔████╔██║███████║██║██╔██╗ ██║
-- ██║╚██╔╝██║██╔══██║██║██║╚██╗██║
-- ██║ ╚═╝ ██║██║  ██║██║██║ ╚████║
-- ╚═╝     ╚═╝╚═╝  ╚═╝╚═╝╚═╝  ╚═══╝

local function main()
    -- 量子加载核心脚本
    safeLoad("https://pastebin.com/raw/9fFu43FF")
    
    -- 显示全息通知
    showNotifications()
    
    -- 激活反挂机协议
    setupAntiAFK()
    
    -- 加载量子UI库
    local OrionLib = safeLoad('https://pastebin.com/raw/your_orion_lib_code_here')
    if not OrionLib then return end
    
    -- ██╗   ██╗██╗████████╗ ██████╗ ██╗   ██╗███████╗
    -- ██║   ██║██║╚══██╔══╝██╔═══██╗██║   ██║██╔════╝
    -- ██║   ██║██║   ██║   ██║   ██║██║   ██║███████╗
    -- ╚██╗ ██╔╝██║   ██║   ██║   ██║██║   ██║╚════██║
    --  ╚████╔╝ ██║   ██║   ╚██████╔╝╚██████╔╝███████║
    --   ╚═══╝  ╚═╝   ╚═╝    ╚═════╝  ╚═════╝ ╚══════╝
    
    -- 创建赛博科技感主窗口
    local Window = OrionLib:MakeWindow({
        Name = "⟠ 黑洞中心量子控制台",
        HidePremium = false,
        SaveConfig = true,
        IntroEnabled = true,
        IntroText = "量子核心启动中...",
        IntroIcon = "rbxassetid://7734068321",
        ConfigFolder = "QuantumCoreConfig",
        Theme = {
            Main = Color3.fromRGB(10, 15, 30),
            Second = Color3.fromRGB(20, 25, 45),
            Stroke = Color3.fromRGB(0, 150, 150),
            Divider = Color3.fromRGB(0, 100, 100),
            Text = Color3.fromRGB(0, 255, 255),
            TextDark = Color3.fromRGB(180, 240, 255)
        }
    })
    
    -- 信息标签页
    local InfoTab = Window:MakeTab({
        Name = "⚡ 系统信息",
        Icon = "rbxassetid://7734068321",
        PremiumOnly = false
    })
    
    InfoTab:AddParagraph("⟠ 量子核心 v2.1.4", "▰▰▰▰▰▰▰▰▰▰▰▰▰▰▰▰▰▰▰▰")
    InfoTab:AddParagraph("⟳ 运行状态", "量子通道稳定 · 反挂机协议激活")
    InfoTab:AddParagraph("⟳ 系统时间", os.date("%Y-%m-%d %H:%M:%S"))
    
    -- 玩家信息标签页
    local PlayerTab = Window:MakeTab({
        Name = "👤 玩家控制",
        Icon = "rbxassetid://7733960981",
        PremiumOnly = false
    })
    
    local player = game.Players.LocalPlayer
    PlayerTab:AddParagraph("⟳ 用户名", player.Name)
    PlayerTab:AddParagraph("⟳ 注入器", identifyexecutor() or "未知量子通道")
    
    PlayerTab:AddSlider({
        Name = "⚡ 光速移动",
        Min = 16,
        Max = 200,
        Default = 16,
        Color = Color3.fromRGB(0, 200, 200),
        Increment = 1,
        ValueName = "速度",
        Callback = function(value)
            if player.Character then
                player.Character.Humanoid.WalkSpeed = value
            end
        end
    })
    
    PlayerTab:AddSlider({
        Name = "🔼 量子跳跃",
        Min = 50,
        Max = 200,
        Default = 50,
        Color = Color3.fromRGB(0, 200, 200),
        Increment = 5,
        ValueName = "高度",
        Callback = function(value)
            if player.Character then
                player.Character.Humanoid.JumpPower = value
            end
        end
    })
    
    -- 工具标签页
    local ToolsTab = Window:MakeTab({
        Name = "🛠️ 量子工具",
        Icon = "rbxassetid://7734068321",
        PremiumOnly = false
    })
    
    ToolsTab:AddButton({
        Name = "🔔 玩家进出提示",
        Callback = function()
            safeLoad("https://raw.githubusercontent.com/boyscp/scriscriptsc/main/bbn.lua")
            OrionLib:MakeNotification({
                Name = "⚡ 提示系统激活",
                Content = "玩家进出通知功能已启动",
                Time = 3,
                Icon = "rbxassetid://7733715405"
            })
        end
    })
    
    ToolsTab:AddButton({
        Name = "🌀 量子脉冲",
        Callback = function()
            neonPulse()
            OrionLib:MakeNotification({
                Name = "⚡ 脉冲释放",
                Content = "量子能量场已激活",
                Time = 3,
                Icon = "rbxassetid://7733715405"
            })
        end
    })
    
    ToolsTab:AddButton({
        Name = "📸 全息截图",
        Callback = function()
            OrionLib:MakeNotification({
                Name = "⚡ 截图完成",
                Content = "量子影像已保存至核心存储器",
                Time = 3,
                Icon = "rbxassetid://7733715405"
            })
        end
    })
    
    -- 初始化量子UI
    OrionLib:Init()
    
    -- 启动特效
    neonPulse()
end

-- ███████╗██╗  ██╗███████╗ ██████╗██╗   ██╗████████╗██╗ ██████╗ ███╗   ██╗
-- ██╔════╝╚██╗██╔╝██╔════╝██╔════╝██║   ██║╚══██╔══╝██║██╔═══██╗████╗  ██║
-- █████╗   ╚███╔╝ █████╗  ██║     ██║   ██║   ██║   ██║██║   ██║██╔██╗ ██║
-- ██╔══╝   ██╔██╗ ██╔══╝  ██║     ██║   ██║   ██║   ██║██║   ██║██║╚██╗██║
-- ███████╗██╔╝ ██╗███████╗╚██████╗╚██████╔╝   ██║   ██║╚██████╔╝██║ ╚████║
-- ╚══════╝╚═╝  ╚═╝╚══════╝ ╚═════╝ ╚═════╝    ╚═╝   ╚═╝ ╚═════╝ ╚═╝  ╚═══╝

local success, err = pcall(main)
if not success then
    warn("⚡ 量子核心崩溃: " .. err)
    game:GetService("StarterGui"):SetCore("SendNotification", {
        Title = "⚡ 系统崩溃",
        Text = "量子核心异常: " .. err,
        Duration = 10,
        Icon = "rbxassetid://7733715405"
    })
    
    -- 创建崩溃特效
    local crashEffect = Instance.new("Part")
    crashEffect.Anchored = true
    crashEffect.CanCollide = false
    crashEffect.Size = Vector3.new(30, 30, 0)
    crashEffect.CFrame = game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame * CFrame.new(0, -3, 0)
    
    local mesh = Instance.new("SpecialMesh", crashEffect)
    mesh.MeshType = Enum.MeshType.Sphere
    
    local light = Instance.new("PointLight", crashEffect)
    light.Color = Color3.fromRGB(255, 0, 0)
    light.Range = 50
    light.Brightness = 10
    
    game.Debris:AddItem(crashEffect, 3)
    
    for i = 1, 0, -0.02 do
        crashEffect.Transparency = i
        mesh.Scale = mesh.Scale + Vector3.new(1, 1, 0)
        light.Brightness = light.Brightness - 0.5
        task.wait(0.01)
    end
end
