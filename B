    PremiumOnly = false
})

-- 创建现代化卡片布局
local function CreateInfoCard(title, content, icon)
    local card = Instance.new("Frame")
    card.Name = "Card"
    card.BackgroundColor3 = Color3.fromRGB(30, 30, 40)
    card.BorderSizePixel = 0
    card.Size = UDim2.new(1, -20, 0, 80)
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = card
    
    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(80, 120, 200)
    stroke.Thickness = 2
    stroke.Parent = card
    
    if icon then
        local iconImg = Instance.new("ImageLabel")
        iconImg.Name = "Icon"
        iconImg.Image = icon
        iconImg.Size = UDim2.new(0, 40, 0, 40)
        iconImg.Position = UDim2.new(0, 15, 0.5, -20)
        iconImg.BackgroundTransparency = 1
        iconImg.Parent = card
    end
    
    local titleLabel = Instance.new("TextLabel")
    titleLabel.Name = "Title"
    titleLabel.Text = title
    titleLabel.TextColor3 = Color3.fromRGB(180, 220, 255)
    titleLabel.Font = Enum.Font.GothamBold
    titleLabel.TextSize = 16
    titleLabel.TextXAlignment = Enum.TextXAlignment.Left
    titleLabel.BackgroundTransparency = 1
    titleLabel.Size = UDim2.new(1, -70, 0.4, 0)
    titleLabel.Position = UDim2.new(0, 70, 0.1, 0)
    titleLabel.Parent = card
    
    local contentLabel = Instance.new("TextLabel")
    contentLabel.Name = "Content"
    contentLabel.Text = content
    contentLabel.TextColor3 = Color3.fromRGB(180, 180, 220)
    contentLabel.Font = Enum.Font.Gotham
    contentLabel.TextSize = 14
    contentLabel.TextXAlignment = Enum.TextXAlignment.Left
    contentLabel.TextYAlignment = Enum.TextYAlignment.Top
    contentLabel.BackgroundTransparency = 1
    contentLabel.Size = UDim2.new(1, -70, 0.5, 0)
    contentLabel.Position = UDim2.new(0, 70, 0.5, 0)
    contentLabel.Parent = card
    
    return card
end

