-- 创建现代化按钮
local function CreateModernButton(parent, text, callback, icon)
    local button = Instance.new("TextButton")
    button.Name = text
    button.Text = text
    button.Size = UDim2.new(1, -20, 0, 50)
    button.BackgroundColor3 = Color3.fromRGB(40, 80, 160)
    button.TextColor3 = Color3.white
    button.Font = Enum.Font.GothamBold
    button.TextSize = 16
    button.AutoButtonColor = false
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = button
    
    if icon then
        local iconImg = Instance.new("ImageLabel")
        iconImg.Name = "Icon"
        iconImg.Image = icon
        iconImg.Size = UDim2.new(0, 30, 0, 30)
        iconImg.Position = UDim2.new(0, 15, 0.5, -15)
        iconImg.BackgroundTransparency = 1
        iconImg.Parent = button
    end
    
    -- 悬停效果
    button.MouseEnter:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(60, 120, 220),
            Size = UDim2.new(1, -15, 0, 55)
        }):Play()
    end)
    
    button.MouseLeave:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(40, 80, 160),
            Size = UDim2.new(1, -20, 0, 50)
        }):Play()
    end)
    
    -- 点击效果
    button.MouseButton1Down:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.1), {
            BackgroundColor3 = Color3.fromRGB(20, 60, 140)
        }):Play()
    end)
    
    button.MouseButton1Up:Connect(function()
        game:GetService("TweenService"):Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = Color3.fromRGB(40, 80, 160)
        }):Play()
        callback()
    end)
    
    button.Parent = parent
    return button
end

-- 设置选项卡
local SettingsTab = Window:MakeTab({
    Name = "系统设置",
    Icon = "rbxassetid://7734068321",
    PremiumOnly = false
})

-- 用户信息卡片
