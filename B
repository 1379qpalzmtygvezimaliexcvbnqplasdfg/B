-- 跳跃高度设置
local jumpContainer = Instance.new("Frame")
jumpContainer.Name = "JumpContainer"
jumpContainer.BackgroundTransparency = 1
jumpContainer.Size = UDim2.new(1, -20, 0, 60)
jumpContainer.Parent = SettingsTab:GetGUI()

local jumpLabel = Instance.new("TextLabel")
jumpLabel.Name = "JumpLabel"
jumpLabel.Text = "跳跃高度设置:"
jumpLabel.TextColor3 = Color3.fromRGB(180, 220, 255)
jumpLabel.Font = Enum.Font.GothamBold
jumpLabel.TextSize = 16
jumpLabel.TextXAlignment = Enum.TextXAlignment.Left
jumpLabel.BackgroundTransparency = 1
jumpLabel.Size = UDim2.new(0.4, 0, 1, 0)
jumpLabel.Position = UDim2.new(0, 0, 0, 0)
jumpLabel.Parent = jumpContainer

local jumpBox = Instance.new("TextBox")
jumpBox.Name = "JumpBox"
jumpBox.PlaceholderText = "输入跳跃高度..."
jumpBox.Text = ""
jumpBox.Size = UDim2.new(0.6, -10, 0.7, 0)
jumpBox.Position = UDim2.new(0.4, 0, 0.15, 0)
jumpBox.BackgroundColor3 = Color3.fromRGB(40, 40, 50)
jumpBox.TextColor3 = Color3.white
jumpBox.Font = Enum.Font.Gotham
jumpBox.TextSize = 14
jumpBox.ClearTextOnFocus = false

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 8)
corner.Parent = jumpBox

jumpBox.FocusLost:Connect(function()
    local value = tonumber(jumpBox.Text)
    if value and value > 0 then
        pcall(function()
            game.Players.LocalPlayer.Character.Humanoid.JumpPower = value
            OrionLib:MakeNotification({
                Name = "设置成功",
                Content = "跳跃高度已设置为: " .. value,
                Time = 3
            })
        end)
    else
        OrionLib:MakeNotification({
            Name = "设置失败",
            Content = "请输入有效的跳跃高度数值",
            Time = 3
        })
    end
end)

jumpBox.Parent = jumpContainer

-- 添加玩家进出提示按钮
CreateModernButton(SettingsTab:GetGUI(), "开启玩家进出提示
